<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/def_margin">

    <ImageView
        android:id="@+id/item_task_icon_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/ts6" />

    <TextView
        android:id="@+id/item_task_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_task_icon_iv"
        android:background="@color/ts7"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:text="1222"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/item_task_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_task_name_tv"
        android:layout_alignBottom="@+id/item_task_icon_iv"
        android:layout_toEndOf="@+id/item_task_icon_iv"
        android:background="@color/ts8"
        android:gravity="center_vertical"
        android:text="1111"
        android:textSize="@dimen/sp_10" />

</RelativeLayout>