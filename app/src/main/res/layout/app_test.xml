<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/def_margin">


    <Button
        android:id="@+id/bt1"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="1" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/bt1" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/bt2" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="4"
        app:layout_constraintLeft_toRightOf="@+id/bt3" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@+id/bt4" />


</android.support.constraint.ConstraintLayout>